@model StudentsSystem.Web.ViewModels.Homework.DetailsViewModel;
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="course-details d-flex justify-content-between row">
    <div class="course-data col-md-5">
        <div class="card-header">Event Name: @Model.Name</div>
        <div class="card-header">Event Date: @Model.EndDate</div>
        <div class="card-header">Event Date: @Model.Description</div>
        <div class="d-flex justify-content-between">
            <a class="btn bg-success text-white" asp-controller="Homework" asp-action="All">Back To All</a>
        </div>
    </div>
</div>