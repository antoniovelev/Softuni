@model StudentsSystem.Web.ViewModels.Homework.DetailsViewModel;
@{
    ViewData["Title"] = "Details";
}

<h1>Homework Details</h1>
<hr class="bg-success" style="height: 2px" />
<hr />

<div class="blog margin-bottom-40 d-flex justify-content-between">
    <div class="course-data justify-content-center col-md-7">
        <div class="card-header"><h3>Homework Name: @Model.Name</h3></div>
        <div class="card-header"><h3>Homework Date: @Model.EndDate</h3></div>
        <div class="card-header text-black-opacity-05"><h3>Homework Description: @Model.Description</h3></div>
        <hr class="bg-success mt-5" style="height: 2px" />
        <div class="d-flex justify-content-around mt-4">
            <a class="btn bg-success text-white" asp-controller="Homework" asp-action="All">Back To All</a>
            <a class="nav-link bg-success text-white" href="/Homework/Edit?homeworkId=@Model.Id">Edit</a>
            <a class="nav-link bg-success text-white" asp-area="" asp-controller="Exercise" asp-action="Create" asp-route-homeworkId="@Model.Id">Create Exercise</a>
        </div>
    </div>
</div>