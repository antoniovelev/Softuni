@model StudentsSystem.Web.ViewModels.Course.DetailsViewModel;
@{
    ViewData["Title"] = "OldCourseDetails";
}

<h1>OldCourseDetails</h1>

<div class="blog margin-bottom-40 d-flex justify-content-between">
    <div class="course-data justify-content-center col-md-9">
        <div class="card-header">Course Name: @Model.Name</div>
        <div class="card-header">Course StartOn: @Convert.ToDateTime(@Model.StartOn).ToString("dd-MM-yyyy")</div>
        <div class="card-header">Course EndOn: @Convert.ToDateTime(@Model.EndOn).ToString("dd-MM-yyyy")</div>
        <div class="card-header">Course Duration: @Model.Duration</div>
        <div class="card-header">Course Description: @Model.Description</div>
        <div class="card-header">Course Grade: @Model.Grade</div>
        <div class="d-flex justify-content-between">
            <a class="btn bg-success text-white asd" asp-controller="Course" asp-action="Old">Back To All</a>
        </div>
    </div>
</div>