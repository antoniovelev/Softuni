@model StudentsSystem.Web.ViewModels.Course.CreateInputModel
@{
    this.ViewData["Title"] = "Create course";
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" asp-action="Create">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="StartOn"></label>
        <input type="datetime" asp-for="StartOn" class="form-control"></input>
        <span asp-validation-for="StartOn" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="EndOn"></label>
        <input asp-for="EndOn" class="form-control"></input>
        <span asp-validation-for="EndOn" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control"></input>
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control"></input>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <hr class="bg-success mt-5" style="height: 2px" />
    <div class="d-flex justify-content-around mt-4">
        <button type="submit" class="btn bg-success text-white">Create</button>
        <a href="/Course/All" class="btn bg-success text-white">Back To Courses</a>
    </div>
</form>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
