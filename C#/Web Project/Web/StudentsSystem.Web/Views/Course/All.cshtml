@using StudentsSystem.Common
@model StudentsSystem.Web.ViewModels.Course.AllViewModel
@{
    this.ViewData["Title"] = "All Courses";
}

@*<div class="text-center">
        <h1 class="display-4">All Courses!</h1>
    </div>*@

<hr class="bg-success" style="height: 2px" />
<main>
    <h1>All Courses</h1>
    <hr class="bg-success" style="height: 2px" />
    <a class="btn btn-success text-white" href="/Course/Create">Create Course</a>
    <a class="btn btn-success text-white" href="/Course/Old">Old Courses</a>
    <hr class="bg-success" style="height: 2px" />
    <div id="albums">
        @foreach (var course in Model.Courses)
        {
            <div>
                <h3>
                    <a href="/Course/Details?id=@course.Id">@course.Name</a>
                </h3>
                <a class="btn btn-success text-white float-lg-right" href="/Course/Delete?id=@course.Id">Delete</a>
            </div>
        }
    </div>
</main>
<hr />
<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }


        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            if (i == this.Model.CurrentPage)
            {
                active = "active";
            }
            else
            {
                active = string.Empty;
            }
            <li class="page-item @active">
                <div>
                    <a class="page-link"
                       asp-controller="Course"
                       asp-action="All"
                       asp-route-page="@i">
                        @i
                    </a>
                </div>
            </li>
        }
        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>
