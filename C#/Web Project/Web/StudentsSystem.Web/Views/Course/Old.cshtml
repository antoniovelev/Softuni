@model StudentsSystem.Web.ViewModels.Course.AllViewModel;
@{
    ViewData["Title"] = "Old Courses";
}

<h1>Old Courses</h1>

<main>
    <hr class="bg-success" style="height: 2px" />
    <div id="albums">
        @foreach (var course in Model.Courses)
        {
            <div class="row">
                <h3 class="col-md-5">
                    <a href="/Course/OldCourseDetails?id=@course.Id">@course.Name</a>
                </h3>
            </div>
        }
    </div>
</main>
<hr />
<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }


        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            if (i == this.Model.CurrentPage)
            {
                active = "active";
            }
            else
            {
                active = string.Empty;
            }
            <li class="page-item @active">
                <div>
                    <a class="page-link"
                       asp-controller="Course"
                       asp-action="Old"
                       asp-route-page="@i">
                        @i
                    </a>
                </div>
            </li>
        }
        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>