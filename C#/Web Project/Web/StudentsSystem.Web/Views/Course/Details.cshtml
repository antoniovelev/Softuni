@using StudentsSystem.Common
@model StudentsSystem.Web.ViewModels.Course.DetailsViewModel
@{
    this.ViewData["Title"] = "Information about course";
}

<div class="text-center">
    <h1 class="display-4">Hello form Details</h1>
</div>
<hr />
<div class="blog margin-bottom-40 d-flex justify-content-between">
    <div class="course-data justify-content-center col-md-9">
        <div class="card-header">Course Name: @Model.Name</div>
        <div class="card-header">Course StartOn: @Convert.ToDateTime(@Model.StartOn).ToString("dd-MM-yyyy")</div>
        <div class="card-header">Course EndOn: @Convert.ToDateTime(@Model.EndOn).ToString("dd-MM-yyyy")</div>
        <div class="card-header">Course Duration: @Model.Duration</div>
        <div class="card-header">Course Description: @Model.Description</div>
        <div class="d-flex justify-content-between">
            <a class="btn bg-success text-white asd" asp-controller="Course" asp-action="All">Back To All</a>
            <a class="nav-link bg-success text-white asd" href="/Course/Edit?courseId=@Model.Id">Edit</a>
            <a class="nav-link bg-success text-white asd" href="/Event/Create?courseId=@Model.Id">Create Event</a>
            <a class="nav-link bg-success text-white asd" asp-area="" asp-controller="Homework" asp-action="Create" asp-route-courseId="@Model.Id">Create Homework</a>
        </div>
    </div>
</div>