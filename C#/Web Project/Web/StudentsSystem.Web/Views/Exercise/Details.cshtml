@model StudentsSystem.Web.ViewModels.Exercise.DetailsViewModel;
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="text-center">
    <h1 class="display-4">Hello form Details</h1>
</div>
<hr />
<div class="course-details d-flex justify-content-between row">
    <div class="course-data col-md-5">
        <div class="card-header">Exercise Name: @Model.Name</div>
        <div class="card-header">Exercise Condition: @Model.Condition</div>
        <div class="d-flex justify-content-between">
            <a class="btn bg-success text-white" asp-controller="Exercise" asp-action="All">Back To All</a>
            <a class="nav-link bg-success text-white" href="/Exercise/Edit?exerciseId=@Model.Id">Edit</a>
        </div>
    </div>
</div>