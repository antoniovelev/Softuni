@using StudentsSystem.Common
@model StudentsSystem.Web.ViewModels.Event.DetailsViewModel
@{
    this.ViewData["Title"] = "Information about events";
}

<div class="text-center">
    <h1 class="display-4">Hello form Details</h1>
</div>
<hr />
<div class="course-details d-flex justify-content-between row">
    <div class="course-data col-md-5">
        <div class="card-header">Event Name: @Model.Name</div>
        <div class="card-header">Event Date: @Model.Date</div>
        <div class="d-flex justify-content-between">
            <a class="btn bg-success text-white" asp-controller="Event" asp-action="All">Back To All</a>
            <a class="nav-link bg-success text-white" href="/Event/Edit?eventId=@Model.Id">Edit</a>
        </div>
    </div>
</div>